.top {
  width: 100%;
  height: 136rpx;
  display: flex;
  align-items: center;
}
.top .add {
  width: 422rpx;
  text-align: center;
  line-height: 92rpx;
  margin: 0 auto;
  color: #1aad19;
  border: 1px solid #1aad19;
  font-size: 36rpx;
}
.foot {
  position: fixed;
  bottom: 0;
  width: 100%;
  display: flex;
  height: 88rpx;
  align-items: center;
  border-bottom: 2rpx solid #ccc;
  z-index: 999;
  background-color: #fff;
  border-top: 2rpx solid #ccc;
  padding-left: 30rpx;
}
.foot .f1 {
  flex: 1.5;
}
.foot .f2 {
  flex: 3;
  text-align: right;
  margin-right: 14rpx;
}
.foot .f2 .f2-1 text {
  font-size: 34rpx;
  color: #c00;
}
.foot .f3 {
  flex: 1;
}
.foot .f3 u-button button {
  height: 88rpx;
  width: 100%;
  border-radius: 0 !important;
  background-color: #c00;
}
.pop {
  width: 600rpx;
  height: 300rpx;
  text-align: center;
}
.pop .tit {
  font-size: 40rpx;
  height: 150rpx;
  line-height: 150rpx;
  font-weight: 700;
}
.pop .but {
  display: flex;
  justify-content: space-around;
}
.car_box {
  padding: 20rpx;
  box-sizing: border-box;
}
.car_box .car_item {
  display: flex;
  justify-content: space-between;
  height: 180rpx;
  align-items: center;
  margin: 20rpx 0;
}
.car_box .car_item .left {
  width: 10%;
}
.car_box .car_item .img {
  width: 30%;
  height: 100%;
}
.car_box .car_item .img image {
  width: 100%;
  height: 100%;
}
.car_box .car_item .right {
  width: 55%;
}
.car_box .car_item .right .name {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.car_box .car_item .right .price {
  color: #c00;
  margin: 10rpx 0;
}
.title {
  height: 80rpx;
  line-height: 80rpx;
  font-weight: 600;
  border: 1px solid #ccc;
}