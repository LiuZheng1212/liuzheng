/* 颜色变量 */
/*文本基本颜色*/
.foot {
  border-top: 1px solid #eee;
  margin: 20rpx 0 0 0;
  width: 100%;
  position: fixed;
  bottom: 0;
  background-color: #fff;
}
.foot .a {
  margin-top: 20rpx;
  width: 100%;
  display: flex;
  margin-bottom: 20rpx;
}
.foot .a input {
  width: 80%;
  background-color: #f8f9fb;
  border-radius: 10px;
  height: 60rpx;
  font-size: 18rpx;
}
.foot .a button {
  width: 100rpx;
  font-size: 14rpx;
}
.xia {
  box-sizing: border-box;
  padding: 20rpx;
}
.xia .navs {
  display: flex;
  background-color: #fff;
  height: 70rpx;
  line-height: 70rpx;
}
.xia .navs p:nth-child(1) {
  margin-left: 10rpx;
  margin-top: 13rpx;
  width: 3px;
  height: 40rpx;
  background-color: #6398ff;
}
.xia .navs p:nth-child(2) {
  margin-left: 30rpx;
  font-weight: 800;
  font-size: 30rpx;
}
.xia ul {
  width: 100%;
  margin-bottom: 75rpx;
}
.xia ul li {
  width: 100%;
  margin-top: 30rpx;
  height: 80rpx;
  height: 80rpx;
}
.xia ul li .left {
  width: 100%;
  display: flex;
}
.xia ul li .left img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50px;
}
.xia ul li .left .con {
  width: 100%;
  margin-left: 15rpx;
}
.xia ul li .left .con .p1 {
  width: 100%;
  font-size: 22rpx;
  color: #ccc;
  display: flex;
  justify-content: space-between;
}
.xia ul li .left .con .p2 {
  font-size: 26rpx;
  color: #000;
}
.xia .name {
  margin: 20rpx 0;
  display: flex;
}
.xia .name img {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50px;
  position: relative;
}
.xia .name .p1s {
  color: #000;
  margin-top: 5rpx;
  margin-left: 20rpx;
}
.xia .name .pp {
  color: #ccc;
  font-size: 20rpx;
  margin-top: 12rpx;
}
* {
  margin: 0;
  padding: 0;
  list-style: none;
}
.nav {
  margin-top: 65rpx;
}
.nav ul {
  display: flex;
  margin: 20rpx 0;
}
.nav ul li {
  padding: 5rpx 10rpx;
  border-radius: 20px;
  border: 1px solid #6398ff;
  color: #6398ff;
  margin-right: 20rpx;
}
.content {
  position: relative;
}
.content .content-box {
  padding: 20rpx;
  box-sizing: border-box;
}
.content .header {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  font-weight: 600;
  border-bottom: 1px solid #eee;
  position: -webkit-sticky;
  position: sticky;
  top: -1rpx;
  background-color: #fff;
}
.content .header view {
  width: 30px;
  position: absolute;
  left: 0;
}
.content .header .gt::before {
  content: "";
  position: absolute;
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-left: 4rpx solid #421800;
  border-bottom: 4rpx solid #421800;
  transform: rotate(45deg);
  left: 15px;
  top: -7px;
}
.content .header .title {
  width: 70%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
}