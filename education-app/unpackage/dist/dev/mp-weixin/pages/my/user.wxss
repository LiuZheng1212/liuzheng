/* 颜色变量 */
/*文本基本颜色*/
.content {
  background-color: #f8f9fb;
  min-height: 93vh;
}
.content .btn {
  margin-top: 20rpx;
  background-color: #fff;
}
.content .top, .content .bottom {
  background-color: #fff;
  margin-top: 20rpx;
}
.content .top .item, .content .bottom .item {
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #eee;
}
.content .top .item .right, .content .bottom .item .right {
  color: #959da5;
  font-size: 17px;
  margin-right: 35rpx;
}
.content .top .item .right image, .content .bottom .item .right image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 50%;
}
.content .top .item .right .lt, .content .bottom .item .right .lt {
  position: relative;
}
.content .top .item .right .lt::before, .content .bottom .item .right .lt::before {
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-right: 2px solid #959da5;
  border-bottom: 2px solid #959da5;
  display: inline-block;
  position: absolute;
  top: 8px;
  right: -15px;
  transform: rotate(-45deg);
}
.content .top .item .right .lt1, .content .bottom .item .right .lt1 {
  position: relative;
}
.content .top .item .right .lt1::before, .content .bottom .item .right .lt1::before {
  content: "";
  width: 15rpx;
  height: 15rpx;
  border-right: 2px solid #959da5;
  border-bottom: 2px solid #959da5;
  display: inline-block;
  position: absolute;
  top: -13px;
  right: -15px;
  transform: rotate(-45deg);
}