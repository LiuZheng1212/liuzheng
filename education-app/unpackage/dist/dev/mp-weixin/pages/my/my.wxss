/* 颜色变量 */
/*文本基本颜色*/
.dir-box {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 3% 4%;
  box-sizing: border-box;
  border-bottom: 1px solid #eee;
}
.dir-box .right {
  position: relative;
}
.dir-box .right::before {
  position: absolute;
  content: "";
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  border-bottom: 1px solid #333;
  border-right: 1px solid #333;
  transform: rotate(-45deg);
  top: 10px;
  right: 10px;
}
.box {
  width: 100%;
  background-color: #345dc2;
}
.box .login-box {
  width: 100%;
  height: 250rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  padding: 0 6%;
  box-sizing: border-box;
}
.box .login-box .img-box {
  width: 80%;
  display: flex;
  align-items: center;
}
.box .login-box .img-box image {
  border-radius: 50%;
}
.box .login-box .img-box .text {
  font-weight: 700;
  font-size: 40rpx;
  margin-left: 5%;
}
.box .login-box .img-box .text1 {
  margin-left: 20rpx;
}
.box .login-box .img-box .text1 p {
  color: #aaa;
  margin: 5rpx 0;
}
.box .login-box .left {
  width: 150rpx;
  height: 150rpx;
  background-color: white;
}
.box .login-box .left image {
  width: 100%;
  height: 100%;
}
.box .login-box .right {
  position: relative;
}
.box .login-box .right::before {
  position: absolute;
  content: "";
  display: inline-block;
  width: 15rpx;
  height: 15rpx;
  border-bottom: 1px solid #333;
  border-right: 1px solid #333;
  transform: rotate(-45deg);
  right: 2px;
}