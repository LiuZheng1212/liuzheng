/* 颜色变量 */
/*文本基本颜色*/
.list {
  margin-top: 90rpx;
}
.list ul {
  padding-left: 0;
  padding: 10rpx 20rpx;
}
.list ul li {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
}
.list ul li .left {
  width: 60%;
}
.list ul li .left .progress-box {
  margin-top: 40rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
}
.list ul li .right {
  width: 40%;
}
.list ul li .right img {
  width: 270rpx;
  border-radius: 10px;
  height: 170rpx;
}
.top {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  color: #000;
  top: 0;
  left: 0;
  z-index: 9999;
}
.top h4 {
  font-size: 32rpx;
}
.top .pp {
  margin-left: 18rpx;
  position: relative;
}
.top .pp::before {
  content: "";
  position: absolute;
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border-left: 2rpx solid #000;
  border-bottom: 2rpx solid #000;
  transform: rotate(45deg);
  left: 15px;
  top: -7px;
}