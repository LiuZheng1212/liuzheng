/* 颜色变量 */
/*文本基本颜色*/
.boxs {
  overflow: hidden;
  width: 100%;
}
.fr {
  float: right;
}
.fl {
  float: left;
}
.order {
  width: 100%;
}
.order .ps {
  margin-top: 20rpx;
  box-sizing: border-box;
  padding: 10rpx 20rpx;
  font-size: 26rpx;
  color: #363839;
}
.order .payment {
  width: 100%;
  overflow: hidden;
}
.order .payment .buy1 {
  width: 100%;
}
.order .payment .buy1 .sf {
  padding: 0 25rpx;
  margin-bottom: 20rpx;
}
.order .payment .buy1 .sf span {
  color: red;
  font-size: 34rpx;
}
.order .payment .buy1 .zf {
  display: flex;
  justify-content: space-between;
  width: 100%;
  box-sizing: border-box;
  padding: 0 15rpx;
  border-bottom: 1px solid #ccc;
}
.order .payment .buy1 .zf .sp {
  color: red;
  margin-top: 15rpx;
}
.order .payment .buy1 .zf button {
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 16rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.order .payment .buy1 .zf button:nth-child(2) {
  background-color: red;
  color: white;
}
.order .payment .buy2 {
  overflow: hidden;
  border-bottom: 1px solid #ccc;
}
.order .payment .buy2 .sf {
  float: right;
  padding: 0 30rpx;
  color: red;
  font-size: 34rpx;
}
.order .payment .buy2 .down {
  margin-top: 40rpx;
  padding: 0 30rpx;
  color: #959da5;
  margin-bottom: 20rpx;
}
.order .payment .buy3 {
  overflow: hidden;
  padding: 0 26rpx;
}
.order .payment .buy3 .sf {
  float: right;
  margin-bottom: 20rpx;
  color: red;
}
.order .payment .buy3 .pap {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}
.order .payment .buy3 .pap .gb {
  color: #959da5;
  margin-top: 12rpx;
}
.order .payment .buy3 .pap button {
  display: inline-block;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 16rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}
.top {
  width: 100%;
  height: 80rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  align-items: center;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9999;
}
.top .pp {
  margin-left: 12rpx;
  position: relative;
}
.top .pp::before {
  content: "";
  position: absolute;
  display: inline-block;
  width: 18rpx;
  height: 18rpx;
  border-left: 2rpx solid #421800;
  border-bottom: 2rpx solid #421800;
  transform: rotate(45deg);
  left: 15px;
  top: -7px;
}
.img1 {
  position: relative;
  top: 2rpx;
  left: 5rpx;
}
.img2 {
  position: relative;
  top: 2rpx;
  left: 2rpx;
}
.course-item {
  width: 100%;
  padding: 2%;
  margin-bottom: 3%;
  height: 240rpx;
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  border-bottom: 1px solid #eee;
}
.course-item .course-img {
  position: relative;
  width: 40%;
}
.course-item .course-img image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.course-item .course-img .imgs {
  box-sizing: border-box;
  padding: 2rpx 15rpx;
  border-radius: 50px;
  position: absolute;
  bottom: 10rpx;
  right: 10rpx;
  color: #fff;
  background-color: rgba(0, 0, 0, 0.3);
}
.course-item .course-text {
  flex: 1;
  margin-left: 4%;
}
.course-item .course-text image {
  width: 30rpx;
  height: 30rpx;
}
.course-item .course-text .first-text {
  font-weight: 600;
}
.course-item .course-text .teacther-text {
  color: #5e5e5e;
  margin-top: 8%;
}
.course-item .course-text .bottom {
  width: 100%;
  display: flex;
  margin-top: 5rpx;
  justify-content: space-between;
}
.course-item .course-text .bottom .left {
  color: orangered;
}
.course-item .course-text .bottom .right {
  margin-right: 10rpx;
}