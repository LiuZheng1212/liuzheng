/* 颜色变量 */
/*文本基本颜色*/
.pay-content {
  display: inline-block;
  width: 150px;
  padding: 0 5px;
  margin-right: 10px;
  border-radius: 10px;
  box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.1);
  background-color: #fff;
}
.pay-content .img-box {
  width: 350rpx;
  position: relative;
}
.pay-content .img-box image {
  width: 140px;
  height: 85px;
  border-radius: 20rpx;
}
.pay-content .img-box .course-time {
  position: absolute;
  bottom: 7px;
  right: 35px;
  font-size: 11px;
  color: #fff;
  background: rgba(51, 51, 51, 0.4);
  border-radius: 10px;
  padding: 0 4px;
}
.pay-content .text h4 {
  font-family: 600;
}
.pay-content .text p {
  font-size: 25rpx;
}
.pay-content .text p image {
  width: 30rpx;
  height: 30rpx;
  padding: 7rpx 5rpx 0 0;
}
.pay-content .text p .name,
.pay-content .text p .head {
  color: #aaa;
}
.pay-content .text p .price {
  font-size: 20rpx;
  color: #ff8c65;
  margin-right: 50rpx;
}