/* 颜色变量 */
/*文本基本颜色*/
.article-item {
  width: 100%;
  display: flex;
  border-bottom: 1px solid #eee;
  padding: 3%;
  box-sizing: border-box;
}
.article-item .left {
  width: 70%;
}
.article-item .left .fir-text {
  font-weight: 750;
  font-size: 34rpx;
}
.article-item .left .sec-text {
  font-size: 25rpx;
  color: #7e7e7e;
  margin: 2% 0 8% 0;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.article-item .left .bottom-text {
  width: 100%;
  display: flex;
  font-size: 25rpx;
  color: #7e7e7e;
}
.article-item .left .bottom-text .name {
  color: black;
}
.article-item .right {
  flex: 1;
  margin-left: 2%;
}
.article-item .right image {
  width: 100%;
  height: 80%;
  border-radius: 6%;
}