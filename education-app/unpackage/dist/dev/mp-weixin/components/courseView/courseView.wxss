/* 颜色变量 */
/*文本基本颜色*/
.course-item {
  width: 100%;
  padding: 2%;
  margin-bottom: 3%;
  height: 240rpx;
  box-sizing: border-box;
  display: flex;
  border-bottom: 1px solid #eee;
}
.course-item .course-img {
  width: 40%;
  position: relative;
}
.course-item .course-img image {
  width: 100%;
  height: 100%;
  border-radius: 20rpx;
}
.course-item .course-img .course-time {
  position: absolute;
  bottom: 2px;
  right: 2px;
  font-size: 11px;
  color: #fff;
  background: rgba(51, 51, 51, 0.4);
  border-radius: 10px;
  padding: 0 4px;
}
.course-item .course-text {
  flex: 1;
  margin-left: 4%;
}
.course-item .course-text image {
  width: 30rpx;
  height: 30rpx;
}
.course-item .course-text .first-text {
  font-weight: 600;
  font-size: 30rpx;
}
.course-item .course-text .teacther-text {
  color: #5e5e5e;
  margin-top: 12%;
  font-size: 25rpx;
}
.course-item .course-text .bottom {
  width: 100%;
  display: flex;
  font-size: 26rpx;
}
.course-item .course-text .bottom .left {
  color: orangered;
}
.course-item .course-text .bottom .right {
  margin-left: 16%;
}